@model PostViewModel
@{
    ViewBag.Title = "New";


}

@using (Html.BeginForm("New", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal container">
        <h4>New Post</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(x => x.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, htmlAttributes: new { style = "max-width:100%", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, htmlAttributes: new{ style = "max-width:100%", @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="image">Image:</label>
                <input type="file" id="image" name="image" />
                @Html.ValidationMessage("images")
            </div>
        </div>


        <div class="form-group">
            <label>Tags</label>
            @Html.TextBoxFor(x => x.Tags, new { @class = "form-control", required = "required", @data_role = "tagsinput" })

            @*@Html.LabelFor(x => x.Tags)*@
            @*@Html.DropDownList("Id", (MultiSelectList)ViewBag.Tags, new { multiple = "multiple", @class = "form-control" })*@
            @*@Html.DropDownListFor(x => x.Tags, new SelectList(ViewBag.Tags, "Id", "TagName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Tags)*@
        </div>


        <button class="btn btn-success">Create</button>

    </div>


}


